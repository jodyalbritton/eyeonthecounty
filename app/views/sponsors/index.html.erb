<div class="container">
	<div class="sponsor-header">
		<h2> Eye On The County is made possible by the following fine sponsors </h2>
	</div>
	<div class="portfolioFilter">
	    <ul class="nav nav-pills">
	    <li><a href="#" data-filter="*" class="current">All Categories</a></li>
	    <% @sponsors.each do |sponsor| %>
	    <li><a href="#" data-filter=".<%= sponsor.category.name%> "><%= sponsor.category.name%></a></li>
	    <% end %>
	 	</ul>
	</div>
	 
	<div class="portfolioContainer">
	 	<% @sponsors.each do |sponsor| %>
	 	
	    	<div class="<%= sponsor.category.name %>">
	    		<%= link_to sponsor_url(sponsor) do %>
		  		<%= image_tag sponsor.avatar.url(:medium) %>
		  		<div class="text-center">
		  		 <h4><%= link_to sponsor.name, sponsor_url(sponsor) %></h4>
		  		 </div>
		  		<% end %>
	    	</div> 

	   
	    <% end %>
	 
	</div>
</div>
<script>
$(window).load(function(){
    var $container = $('.portfolioContainer');
    $container.isotope({
        filter: '*',
        animationOptions: {
            duration: 750,
            easing: 'linear',
            queue: false
        }
    });
 
    $('.portfolioFilter a').click(function(){
        $('.portfolioFilter .current').removeClass('current');
        $(this).addClass('current');
 
        var selector = $(this).attr('data-filter');
        $container.isotope({
            filter: selector,
            animationOptions: {
                duration: 750,
                easing: 'linear',
                queue: false
            }
         });
         return false;
    }); 
});
</script>
