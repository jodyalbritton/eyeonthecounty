<% if @videos.any? %>
  <div class="container">
    <div class="row">
      <div class="col-md-6" id="player-wrapper"></div>
      <div class="col-md-6">
      <div style="overflow:scroll; height:400px; overflow-x: hidden;">
      <% @videos.in_groups_of(2) do |group| %>
      
      <div class="row" >
                <% group.each do |video| %>
                  <% if video %>
                    <div class="col-md-6">
                      <div class="yt_video thumbnail">
                        <%= image_tag "https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title,
                                      class: 'yt_preview img-rounded', :"data-uid" => video.uid %>

                        <div class="caption">
                          <h5><%= video.title %></h5>
                          <p>Author: <b><%= video.author %></b></p>
                          <p>Duration: <b><%= video.duration %></b></p>
                          <p>
                            <span class="fa fa-thumbs-up"></span> <%= video.likes %>
                            <span class="fa fa-thumbs-down"></span> <%= video.dislikes %>
                          </p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>

            <% end %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
    
    
 